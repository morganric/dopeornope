<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :name %>
    <%= f.input :permalink %>
    <br/>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br/>
    <%= f.input :user_id, as: :hidden %>
    <%= f.input :slug, as: :hidden %>
    <%= f.input :description %>
    <%= f.input :views, as: :hidden %>
  </div>
  <br/>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
